<h3 class="mt-3 text-center">ساخت منو جدید</h3>

<%- include ('../includes/validationErrors.ejs') %>

<div class="d-flex align-items-center justify-content-center">
    <form action="/menu/add-menu" class="w-50" method="POST" enctype="multipart/form-data">
        <label for="selectedThumbnail">عکس منو</label>
        <div class="input-group mb-3">
            <input
                    type="file"
                    class="custom-file-input"
                    name="thumbnail"
                    id="selectedThumbnail"
                    aria-describedby="inputGroupFileAddon03"
            />
            <label
                    id="thumbStatus"
                    class="custom-file-label"
                    for="inputGroupFile03"
            >عکس مورد نظر را انتخاب کنید</label
            >
        </div>
        <div class="form-group">
            <label for="title">عنوان منو</label>
            <input
                    type="text"
                    class="form-control w-50"
                    name="title"
                    id="title"
            />
        </div>

        <div class="form-group">
            <label for="status">وضعیت</label>
            <select name="status" class="form-control w-25" id="status">
                <option value="public" selected>عمومی</option>
                <option value="private">خصوصی</option>
            </select>
        </div>

        <div class="row">
            <input type="submit" value="ساخت منو" class="btn btn-success m-2"/>
            <a href="/menu" class="btn btn-warning m-2">انصراف</a>
        </div>
    </form>
</div>
